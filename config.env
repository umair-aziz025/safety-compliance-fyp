# Flask Secret Key - Generate your own using: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=your-secret-key-here-replace-with-actual-secret-key-generated-using-python-secrets

# Database Configuration
# Replace this with your actual Neon.tech database URL after setup
# Format: postgresql://username:password@host/database?sslmode=require
DATABASE_URL=postgresql://your_db_user:your_db_password@your-host.neon.tech/your_database?sslmode=require

# Email Configuration (Optional - for notifications)
# Configure if you want email notifications for user registration/alerts
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password-here